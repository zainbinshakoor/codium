{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",                 // Specify output directory for the compiled app code
    "declaration": true,                // Enable TypeScript declaration files (.d.ts)
    "declarationDir": "./dist/types"    // Directory for the type declarations
  },
  "include": ["src/**/*"],               // Include all source files
  "exclude": ["node_modules", "dist"]    // Exclude build output and node_modules
}
